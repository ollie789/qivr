# Qivr Environment Configuration
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development
ASPNETCORE_ENVIRONMENT=Development

# Database
DATABASE_URL=postgresql://qivr_user:qivr_dev_password@localhost:5432/qivr
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=qivr
DATABASE_USER=qivr_user
DATABASE_PASSWORD=qivr_dev_password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# AWS Configuration (LocalStack for development)
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT_URL=http://localhost:4566

# Cognito
AWS_COGNITO_USER_POOL_ID=ap-southeast-2_XXXXXXXXX
AWS_COGNITO_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXX
AWS_COGNITO_REGION=ap-southeast-2

# S3 / MinIO
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_UPLOADS=qivr-uploads
S3_BUCKET_EXPORTS=qivr-exports
S3_BUCKET_ASSETS=qivr-assets

# API Configuration
API_BASE_URL=http://localhost:5000
API_PORT=5000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Frontend URLs
WIDGET_URL=http://localhost:3000
PATIENT_PORTAL_URL=http://localhost:3001
CLINIC_DASHBOARD_URL=http://localhost:3002

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ISSUER=qivr.health
JWT_AUDIENCE=qivr-api
JWT_EXPIRY_MINUTES=60

# Email Configuration (Mailhog for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_FROM_EMAIL=noreply@qivr.health
SMTP_FROM_NAME=Qivr Health

# SMS Configuration (MessageMedia)
MESSAGEMEDIA_API_KEY=your-api-key
MESSAGEMEDIA_API_SECRET=your-api-secret
MESSAGEMEDIA_FROM_NUMBER=+61400000000

# Google Calendar API
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/google/callback

# Microsoft Graph API
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:5000/auth/microsoft/callback

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=qivr
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp

# Feature Flags
FEATURE_3D_BODY_MAP=true
FEATURE_AI_SUMMARIES=true
FEATURE_VOICE_AGENT=false
FEATURE_SMS_REMINDERS=true
FEATURE_CALENDAR_SYNC=true

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
RATE_LIMIT_PER_MINUTE=100
MAX_FILE_UPLOAD_SIZE_MB=10

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
