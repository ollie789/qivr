{
  "name": "qivr",
  "version": "1.0.0",
  "private": true,
  "description": "Patientâ†”Allied Health Connector Platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "db:migrate": "bash database/run-migrations.sh",
    "db:seed": "psql -h localhost -U qivr_user -d qivr -f database/seed-data.sql",
    "clean": "turbo run clean && rm -rf node_modules",
    "widget:dev": "npm run dev --workspace=@qivr/widget",
    "patient:dev": "npm run dev --workspace=@qivr/patient-portal",
    "clinic:dev": "npm run dev --workspace=@qivr/clinic-dashboard",
    "backend:dev": "cd backend && dotnet watch run --project Qivr.Api",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "turbo": "^1.12.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "google-auth-library": "^10.2.1",
    "googleapis": "^156.0.0",
    "pg": "^8.16.3",
    "pg-connection-string": "^2.9.1"
  }
}
