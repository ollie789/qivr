{
  "name": "@qivr/design-system",
  "version": "0.1.0",
  "private": true,
  "description": "Shared styling primitives, tokens, and components for Qivr apps",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build-tokens && tsc -p tsconfig.json && npm run copy-assets",
    "build-tokens": "style-dictionary build --config style-dictionary.config.js",
    "copy-assets": "mkdir -p dist/assets && cp -r src/assets/* dist/assets/",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "peerDependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/icons-material": "^5.15.14",
    "@mui/material": "^5.15.14",
    "@mui/system": "^5.15.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@mui/lab": "^5.0.0-alpha.170",
    "@mui/x-data-grid": "^7.0.0",
    "@mui/x-date-pickers": "^7.0.0",
    "simplebar-react": "^3.2.4",
    "simplebar-core": "^1.2.4",
    "stylis": "^4.3.1",
    "stylis-plugin-rtl": "^2.1.1",
    "echarts": "^5.5.0",
    "echarts-for-react": "^3.0.2",
    "gsap": "^3.12.5",
    "swiper": "^11.0.7",
    "yet-another-react-lightbox": "^3.17.1",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.51.0",
    "yup": "^1.3.3",
    "i18next": "^23.10.0",
    "react-i18next": "^14.1.0",
    "react-router-hash-link": "^2.4.3"
  },
  "devDependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/icons-material": "^5.18.0",
    "@mui/material": "^5.18.0",
    "@mui/system": "^5.15.14",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "typescript": "^5.4.0"
  }
}