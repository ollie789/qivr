{
  "name": "@qivr/design-system",
  "version": "0.1.0",
  "private": true,
  "description": "Shared styling primitives, tokens, and components for Qivr apps",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build-tokens && tsc -p tsconfig.json && npm run copy-assets",
    "build-tokens": "style-dictionary build --config style-dictionary.config.js",
    "copy-assets": "mkdir -p dist/assets && cp -r src/assets/* dist/assets/",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
