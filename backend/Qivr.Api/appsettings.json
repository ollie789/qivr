{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=qivr;Username=qivr_user;Password=qivr_dev_password"
  },
  "Cognito": {
    "Region": "ap-southeast-2",
    "UserPoolId": "ap-southeast-2_XXXXXXXXX",
    "UserPoolClientId": "XXXXXXXXXXXXXXXXXXXXXXXXX",
    "UserPoolClientSecret": "",
    "UserPoolDomain": "qivr-auth",
    "IdentityPoolId": "",
    "SamlMetadataUrl": "",
    "OidcProviderUrl": "",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 30,
    "IdTokenExpirationMinutes": 60,
    "MfaEnabled": false,
    "MfaMethods": ["SMS", "TOTP"],
    "Google": {
      "ClientId": "",
      "ClientSecret": "",
      "Scopes": ["openid", "profile", "email"]
    },
    "Facebook": {
      "AppId": "",
      "AppSecret": "",
      "Scopes": ["public_profile", "email"]
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:3001",
      "http://localhost:3002",
      "http://localhost:5173",
      "http://localhost:5174"
    ]
  },
  "Smtp": {
    "Host": "localhost",
    "Port": 1025,
    "FromEmail": "noreply@qivr.health",
    "FromName": "Qivr Health"
  },
  "MessageMedia": {
    "ApiKey": "your-api-key",
    "ApiSecret": "your-api-secret",
    "FromNumber": "+61400000000"
  },
  "S3": {
    "Endpoint": "http://localhost:9000",
    "AccessKey": "minioadmin",
    "SecretKey": "minioadmin",
    "BucketName": "qivr-uploads"
  },
  "OpenTelemetry": {
    "Endpoint": "http://localhost:4317"
  },
  "Environment": "Development",
  "Security": {
    "AllowedClinicDomains": [
      "*.clinic.local",
      "*.qivr.health",
      "localhost:*"
    ],
    "DefaultTenantId": "00000000-0000-0000-0000-000000000001",
    "EnableSecurityHeaders": true,
    "RequireHttps": false,
    "CspReportUri": "/api/security/csp-report"
  }
}
