# QIVR Backend Environment Variables
# Copy this to .env and fill in your values

# Database
QIVR_DB_PWD=your_database_password_here
INTAKE_DB_PWD=your_intake_database_password_here
# Or use full connection URLs instead:
# DATABASE_URL=postgres://user:pass@host:port/dbname
# INTAKE_DATABASE_URL=postgres://user:pass@host:port/dbname

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-minimum-32-characters-long

# AWS Services
SQS_QUEUE_URL=https://sqs.ap-southeast-2.amazonaws.com/your-account/your-queue
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-southeast-2

# S3 Storage (MinIO in development)
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_ENDPOINT=http://localhost:9000
S3_BUCKET_NAME=qivr-uploads

# AWS Cognito
COGNITO_USER_POOL_ID=ap-southeast-2_XXXXXXXXX
COGNITO_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXX
COGNITO_CLIENT_SECRET=your_cognito_client_secret

# MessageMedia SMS API
MESSAGE_MEDIA_API_KEY=your_message_media_api_key
MESSAGE_MEDIA_API_SECRET=your_message_media_api_secret

# Email Configuration (for production)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_USE_SSL=true

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5001

# OpenTelemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Feature Flags
ENABLE_AI_ANALYSIS=false
SEND_EMAIL_NOTIFICATIONS=false
PROCESS_INTAKE_QUEUE=true
